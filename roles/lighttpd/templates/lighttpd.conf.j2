server.document-root       = "/var/www/html/{{ role_server_name }}/{{ role_server_root }}"

server.port                = {{ role_server_port }}
server.username            = "{{ role_lighttpd_user }}"
server.groupname           = "{{ role_lighttpd_user }}"
server.bind                = "{{ role_server_ip }}"
server.tag ="lighttpd"

server.errorlog            = "/var/log/lighttpd/error.log"
accesslog.filename         = "/var/log/lighttpd/access.log"

server.modules             = (
            "mod_access",
            "mod_accesslog",
            "mod_rewrite",
            "mod_redirect",
            "mod_setenv",
            "mod_deflate"
)

var.common-response-header += (
        "Access-Control-Allow-Origin"           => "{{ role_server_address }}",
        "Access-Control-Allow-Credentials"      => "true",
        "Access-Control-Allow-Methods"          => "GET,HEAD,OPTIONS,POST,PUT",
        "Access-Control-Allow-Headers"          => "Access-Control-Allow-Headers, Origin,Accept, X-Requested-With, Content-Type, Access-Control-Request-Method, Access-Control-Request-Headers"
)

setenv.add-response-header = var.common-response-header

deflate.cache-dir = "/tmp/lighttpdcompress/"
deflate.mimetypes  = ("text/plain","text/css", "text/xml", "text/javascript" )

# mimetype mapping
